package com.techlabs.model;

public class InputValidator {
	private String userName;
	private String password;
	private String email;
	public InputValidator() {
		super();
		this.username = null;
		this.password = null;
		this.email = null;
	}
	public String getUserName() {
		return username;
	}
	public void setUsername(String userName) {
		
		if(userName==null || userName==""|| userName.length()<3|| userName.length()>20) {
			System.out.println("Enter a Valid User Name!!!!");
			return;
		}
		this.userName = userName;
	}
	public String getPassword() {
		return password;
	}
	public void setPassword(String password) {
		if(password.length()<=8) {
			System.out.println("Password Length must be greater than 8");
			return;
		}
		if(password.length()>=20) {
			System.out.println("Password Length must be less than 20");
			return;
		}
		this.password = password;
	}
	public String getEmail() {
		return email;
	}
	public void setEmail(String email) {
		
		if(email==null || email==""|| email.length()<5|| email.length()>50) {
			System.out.println("Length Must be in between 5 to 50:");
			return;
		}
		
		if(isInValid(email)) {
			System.out.println("Email must contains @ and . ");
			return ;
		}
		this.email = email;
	}
	private boolean isInValid(String email2) {
		
		int checkSymbol1=0;
		int checkSymbol2=0;
		
		for(int i=0;i<email2.length();i++) {
			if(email2.charAt(i)=='@') checkSymbol1=1;
			if(email2.charAt(i)=='.') checkSymbol2=1;
		}
		
		if(checkSymbol1+checkSymbol2 ==2) return false;
		return true;
	}
	
	
	
	
}
